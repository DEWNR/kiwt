{
  "root": {
    "src": "./src",
    "dest": "./public"
  },

  "tasks": {
    "browserSync": {
      "server": {
        "baseDir": "public"
      }
    },

    "static": {
      "src": "static",
      "dest": "./"
    },

    "js": {
      "src": "javascripts",
      "dest": "js",
      "files": [
          {
            "source": ["src/javascripts/bookeasy-cart.js"],
            "filename": "bookeasy-cart.js"
          },{
              "source": ["src/javascripts/bookeasy-details.js"],
              "filename": "bookeasy-details.js"
          },{
              "source": ["src/javascripts/bookeasy-booking.js"],
              "filename": "bookeasy-booking.js"
          },{
            "source": ["src/javascripts/color-thief.js"],
            "filename": "color-thief.js"
          },{
            "source": ["./node_modules/jquery-fancybox/source/js/jquery.fancybox.js", "./node_modules/jquery-columnizer/src/jquery.columnizer.js"],
            "filename": "plugins.js"
          },{
            "source": ["src/javascripts/main.js"],
            "filename": "main.js"
          }
      ],
      "extensions": ["js"]
    },

    "css": {
      "src": "stylesheets",
      "dest": "css",
      "autoprefixer": {
        "browsers": ["last 3 version"]
      },
      "sass": {
        "indentedSyntax": false,
        "includePaths": ["./node_modules"]
      },
      "extensions": ["sass", "scss", "css"]
    },

    "html": {
      "src": "html",
      "dest": "./",
      "dataFile": "data/global.json",
      "htmlmin": {
        "collapseWhitespace": true
      },
      "extensions": ["html", "json"],
      "excludeFolders": ["layouts", "shared", "macros", "data"]
    },

    "images": {
      "src": "images",
      "dest": "images",
      "extensions": ["jpg", "png", "svg", "gif"]
    },

    "fonts": {
      "src": "fonts",
      "dest": "fonts",
      "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
  },

    "svgSprite": {
      "src": "sprites",
      "dest": "images",
      "extensions": ["svg"]
    }
  }
}
